@model ZooPlanet.Areas.Admin.Models.ViewModels.AgregarViewModel
@{
    Layout = "_Layout";
}

<h1>Editar Especies</h1>

<form method="post" asp-area="Admin" asp-controller="Home" asp-action="Editar">
    <input type="hidden" asp-for="Animalito.Id" />
    <label>Nombre:</label>
    <input required asp-for="Animalito.Especie" />
    <label>Clase:</label>
    <select required asp-for="Animalito.IdClase" asp-items="@(new SelectList(Model.Clases, "Id", "Nombre"))">
        <option value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input required asp-for="Animalito.Habitat" />
    <label>Peso:</label>
    <input type="number" step="0.1" asp-for="Animalito.Peso" />
    <label>Tamaño:</label>
    <input step="0.1" asp-for="Animalito.Tamaño" />
    <label>Observaciones:</label>
    <textarea asp-for="Animalito.Observaciones"></textarea>

    <input type="submit" value="Editar" />

    <a href="~/Administrador">
        <input type="button" value="Cancelar" />
    </a>
</form>