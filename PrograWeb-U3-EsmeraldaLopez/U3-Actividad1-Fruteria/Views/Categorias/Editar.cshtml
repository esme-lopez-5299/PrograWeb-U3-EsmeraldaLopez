@model U3_Actividad1_Fruteria.Models.Categorias 
@{
    Layout = "_LayoutAdmin";
}

<form method="post" action="~/Categorias/Editar">
    <div>
        <h1>Editar Categoría</h1>

        <input type="hidden" id="id" name="Id" value="@Model.Id" />

        <label>Nombre:</label>
        <input type="text" id="txtNombre" name="Nombre" value="@Model.Nombre" required="required" />

        <div class="botones">
            <p id="error">
                @Html.ValidationSummary()
            </p>
            <input type="submit" value="Guardar" id="btnGuardar" />
            <a href="~/Categorias">
                <input type="button" value="Cancelar" id="btnCancelar" formnovalidate="formnovalidate" />
            </a>            
        </div>
    </div>
</form>
